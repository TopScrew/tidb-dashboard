{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboardApproval": true,
  "labels": ["dependencies"],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "packageRules": [
    {
      "enabled": false,
       "groupName": "everything",
      "matchPackagePatterns": ["*"]
    }
  ],
  "baseBranches": ["master", "release"]
}
